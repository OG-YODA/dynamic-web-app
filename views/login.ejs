    } 
 
    .outer { 
      align-self: flex-end; 
      flex-grow: 1; 
      flex-basis: auto; 
      margin: auto; 
      flex-shrink: 1; 
    } 
 
    .outer h1 { 
      font-size: 80px; 
      margin-top: 20px;
      margin-bottom: 10px;
    } 

    .outer h2 { 
      font-size: 30px; 
      margin-top: 5px;
    } 
 
    a { 
      color: #D0E0F0; 
      text-decoration: none; 
      transition: color 0.3s; 
    } 
 
    a:hover { 
      color: #ffffff; 
    }

    #log{
        margin-top: 10px;
        font-size: 40px;
    }

    label{
        font-size: 20px;
    }

    button { 
        margin-top: 10%;
        background-color: #D0E0F0; 
        color: #000; 
        font-family: inherit; 
        font-size: 2rem;
        border: 2px solid #D0E0F0; 
        padding: 7px 10px; 
        transition: all 0.3s; 
        line-height: 110%; 
        margin: 0 10px; 
    } 
 
    button:hover { 
        background-color: #000; 
        color: #D0E0F0; 
    }

    input{
        margin-top: 10px;
        margin-bottom: 10px;
    }

    form {
        max-width: 30%;
        margin: 0 auto;
    }

    .form-group {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
    }

    .form-group label {
        width: 150px;
        text-align: left;
        margin-right: 20px;
    }

    .form-group input {
        flex: 1;
        background-color: #D0E0F0; 
        color: #000; 
        font-family: Arial, Helvetica, sans-serif; 
        font-size: 1rem;
        border: 2px solid #D0E0F0; 
        padding: 3px 5px; 
        transition: all 0.3s; 
    }

    .form-group input:hover{
        background-color: #000; 
        color: #D0E0F0; 
    }

  </style>
</head>
<body>
    <header>
        <nav class="socials">
            <a href="https://itunes.apple.com/artist/lana-del-rey/id464296584">
