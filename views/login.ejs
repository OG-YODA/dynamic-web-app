      padding: 0; 
      display: flex; 
      flex-direction: column; 
      min-height: 100vh;
    }

    header, main {
      flex: 1;
    }

    footer { 
      font-size: 9px; 
      align-self: center; 
      padding: 1%; 
      position: relative; 
      bottom: 0; 
      width: 100%; 
      background-color: rgba(0, 0, 0, 0.8);
      color: #fff; 
      flex-shrink: 0;
    } 
 
    header { 
      display: flex; 
      flex-direction: row; 
      flex-wrap: nowrap; 
      justify-content: flex-start; 
      align-items: flex-start; 
      align-content: flex-start; 
    } 
 
    .socials { 
      width: auto; 
